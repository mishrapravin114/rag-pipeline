[mysqld]
# Basic Settings
port = 3306
bind-address = 0.0.0.0
max_allowed_packet = 256M
wait_timeout = 28800
interactive_timeout = 28800

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Connection Management
# max_connections set high to accommodate multiple app instances with connection pools
# App uses pool_size=20 + max_overflow=40 = 60 connections per instance max
max_connections = 500
max_connect_errors = 1000000
thread_cache_size = 50
thread_pool_size = 16

# InnoDB Settings for Production
innodb_buffer_pool_size = 4G
innodb_buffer_pool_instances = 4
innodb_log_file_size = 1G
innodb_log_buffer_size = 256M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = ON
innodb_lock_wait_timeout = 300
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_thread_concurrency = 0
innodb_autoinc_lock_mode = 2

# Query Cache (disabled in MySQL 8.0+, but settings for compatibility)
query_cache_type = 0
query_cache_size = 0

# Temporary Tables
tmp_table_size = 256M
max_heap_table_size = 256M

# Logging
log_error = /var/log/mysql/error.log
slow_query_log = ON
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = ON

# Performance Schema
performance_schema = ON
performance_schema_instrument = '%=ON'

# Binary Logging for Replication/Backup
log_bin = /var/log/mysql/mysql-bin.log
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 1G
sync_binlog = 1

# Table Settings
table_open_cache = 4000
table_definition_cache = 2000

# Sort and Join Buffers
sort_buffer_size = 4M
join_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M

# Network
net_buffer_length = 16K
net_read_timeout = 300
net_write_timeout = 600

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4